{
    "name": "Playpilot IMDb link",
    "description": "Adds a link from a movie's IMDb page to Playpilot.",
    "version": "0.1",
    "manifest_version": 3,
    "icons": {
        "16" : "icons/icon16.png",
        "32" : "icons/icon32.png",
        "48" : "icons/icon48.png",
        "64" : "icons/icon64.png",
        "128" : "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://www.imdb.com/title/*"],
            "js": ["contentScript.js"],
            "css": ["styles.css"]
        }
    ]
  }